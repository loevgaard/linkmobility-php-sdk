{
    "name": "loevgaard/linkmobility-php-sdk",
    "type": "library",
    "description": "PHP SDK for Linkmobility API",
    "keywords": [
        "linkmobility",
        "php",
        "sms",
        "sms gateway",
        "sdk"
    ],
    "homepage": "https://github.com/loevgaard/linkmobility-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "http://www.loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.1",
        "beberlei/assert": "^2.7",
        "guzzlehttp/guzzle": "~6.2",
        "psr/http-message": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.5||~6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\Linkmobility\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\Linkmobility\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
