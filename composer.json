{
    "name": "riskogab/linkmobility-php-sdk",
    "type": "library",
    "description": "Forked repository of PHP SDK for Linkmobility API by Joachim LÃ¸vgaard",
    "keywords": [
        "linkmobility",
        "php",
        "sms",
        "sms gateway",
        "sdk"
    ],
    "homepage": "https://github.com/riskogab/linkmobility-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabor Risko",
            "email": "riskogab@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0||^8.0",
        "beberlei/assert": "^2.7",
        "guzzlehttp/guzzle": "~6.2",
        "psr/http-message": "~1.0",
        "symfony/options-resolver": "^3.0|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\Linkmobility\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\Linkmobility\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
